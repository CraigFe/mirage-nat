OASISFormat: 0.4
Name: mirage-nat
Version: 0.6.0
Synopsis: an embryonic NAT module
Authors: Mindy Preston (meetup@yomimono.org)
License: ISC
Plugins: META (0.4), DevFiles (0.4)
AlphaFeatures: pure_interface
BuildTools: ocamlbuild

Description: rewrite packets to support translation between external and internal address space

Library "mirage-nat"
  Path: lib
  Modules: Mirage_nat, Nat_packet
  InternalModules: Nat_rewrite, Nat_translations, Nat_decompose
  BuildDepends: ipaddr, tcpip, tcpip.ethif, tcpip.arpv4, tcpip.ipv4, tcpip.ipv6, tcpip.icmpv4, tcpip.udp, tcpip.tcp, cstruct, lwt, mirage-profile, rresult, logs, mirage-time, mirage-clock

Library "mirage-nat-hashtable"
  Path: lib/hashtable
  Findlibname: hashtable
  FindlibParent: mirage-nat
  Modules: Mirage_nat_hashtable
  BuildDepends: ipaddr, tcpip, cstruct, lwt, mirage-profile, mirage-nat

Executable test_rewrite
  Build$: flag(tests)
  Install: false
  Path: lib_test
  MainIs: test_rewrite.ml
  ByteOpt: -g
  BuildDepends: oUnit, alcotest, mirage-nat, mirage-nat.hashtable, lwt.unix, io-page.unix, logs.fmt, mirage-clock-unix

Test test_rewrite
