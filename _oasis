OASISFormat: 0.4
Name: mirage-nat
Version: 0.6.0
Synopsis: an embryonic NAT module
Authors: Mindy Preston (meetup@yomimono.org)
License: ISC
Plugins: META (0.4), DevFiles (0.4)
AlphaFeatures: pure_interface
BuildTools: ocamlbuild

Description: rewrite packets to support translation between external and internal address space

Flag randomized
  Description: build randomized tests (requires arbitrary-network)
  Default: false

Flag irmin
  Description: build Irmin-backed NAT table
  Default: false

Library "mirage-nat-hashtable"
  Path: lib/hashtable
  Findlibname: mirage-nat-hashtable
  Modules: Mirage_nat_hashtable
  BuildDepends: ipaddr, tcpip, cstruct, sexplib, sexplib.syntax, lwt, mirage-profile, mirage-nat

Library "mirage-nat"
  Path: lib
  Modules: Mirage_nat
  InternalModules: Nat_rewrite, Nat_decompose, Nat_translations
  BuildDepends: ipaddr, tcpip, cstruct, lwt, mirage-profile, sexplib.syntax, sexplib

Library "mirage-nat-irmin"
  Build$: flag(irmin)
  Path: lib/irmin
  Findlibname: mirage-nat-irmin
  Modules: Mirage_nat_irmin
  InternalModules: Storage
  BuildDepends: ipaddr, tcpip, cstruct, sexplib, sexplib.syntax, tc, irmin-network-datastores, irmin, irmin.mem, lwt, mirage-profile, mirage-nat

Executable randomized_tests
  Build$: flag(randomized) && flag(tests)
  Path: lib_test
  MainIs: test_randomized.ml
  ByteOpt: -g
  BuildDepends: oUnit, alcotest, quickcheck, mirage-nat, arbitrary-network

Test randomized_tests
  Run$: flag(randomized) && flag(tests)
  Command: $randomized_tests

Executable test_decompose
  Build$: flag(tests)
  Install: false
  Path: lib_test
  Custom: true
  CompiledObject: best
  MainIs: test_decompose.ml
  ByteOpt: -g
  BuildDepends: oUnit, alcotest, mirage-nat, tcpip

Executable test_rewrite
  Build$: flag(tests)
  Install: false
  Path: lib_test
  Custom: true
  MainIs: test_rewrite.ml
  ByteOpt: -g
  BuildDepends: oUnit, tcpip, alcotest, mirage-nat, lwt.unix, mirage-nat-hashtable

Test test_decompose
  Run$: flag(tests)
  Command: $test_decompose

Test test_rewrite
  Run$: flag(tests)
  Command: $test_rewrite
